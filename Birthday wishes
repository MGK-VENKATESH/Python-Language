#dispaly design 1
from turtle import*
import turtle as t
t=t.Turtle()
new=t.getscreen()


new.bgcolor('black')
t.hideturtle()
t.goto(0,-10)

t.pensize(3)
t.color('red')
t.begin_fill()
t.left(140)
t.forward(180)
t.circle(-90,200)
t.setheading(60)
t.circle(-90,200)
t.forward(178)
t.end_fill()

t.penup()
t.goto(-85,130)
t.pendown()
t.color('white')
t.write("I Love You",font=("verdana",25,"bold"))
t.penup()
t.goto(-65,170)
t.pendown()
t.color('white')
t.write("DADDY...",font=("verdana",25,"bold"))
t.penup()
t.goto(-300,-55)
t.pendown()
t.color('white')
t.write("HAPPY BIRTHDAY TO MY SUPPORTER...",font=("verdana",20,"bold"))
t.penup()
t.goto(-250,-100)
t.pendown()
t.write("CREATED BY YOUR FAMILY",font=("verdana",25,"bold"))

t.penup()
timer_text=tur.Turtle()
start=time.time()
while time.time() - start<5:

    new.update()



t.reset()




#design fireworks

import turtle
import random


wn = turtle.Screen()
wn.setup(500,500)
wn.bgcolor('black')

myturtle = turtle.Turtle()
myturtle.speed(0)
myturtle.hideturtle()

colors = [
    'blue', 'red', 'yellow', 'orange', 'purple',  'pink', 'lime', 'green', 'gold', 'silver', 'violet'
]


def draw_fw(t):
     x = random.randint(-400,400)
     y = random.randint(-400,400)
     t.penup()
     t.goto(x,y)
     t.pendown()
     t.color(random.choice(colors))
     d = random.randint(20,100)

     for i in range(36):
         t.forward(d)

         t.left(90)
         t.forward(1)
         t.backward(1)
         t.left(180)
         t.forward(1)
         t.backward(1)
         t.left(90)
         t.backward(d)
         t.right(10)

for i in range(15):
    draw_fw(myturtle)

myturtle.penup()
myturtle.goto(0,200)
myturtle.color('white')
myturtle.write(" I'M THE LUCKIEST PERSON TO HAVE A DAD LIKE YOU.HAPPY BIRTHDAY DAD!",align="center",font=("verdana",24,"normal"))


tur.mainloop()
